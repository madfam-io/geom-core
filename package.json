{
  "name": "@madfam/geom-core",
  "version": "0.1.0",
  "description": "Unified B-Rep geometry engine for MADFAM ecosystem - zero-lag browser execution with remote GPU compute",
  "main": "dist/cjs/index.js",
  "module": "dist/esm/index.js",
  "types": "dist/types/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/esm/index.js",
      "require": "./dist/cjs/index.js",
      "types": "./dist/types/index.d.ts"
    },
    "./wasm": {
      "import": "./dist/wasm/geom-core.js",
      "require": "./dist/wasm/geom-core.js",
      "types": "./dist/wasm/geom-core.d.ts"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "npm run build:ts && npm run build:wasm",
    "build:ts": "npm run build:esm && npm run build:cjs && npm run build:types",
    "build:esm": "tsc -p tsconfig.esm.json",
    "build:cjs": "tsc -p tsconfig.cjs.json",
    "build:types": "tsc -p tsconfig.types.json",
    "build:wasm": "./scripts/build_wasm.sh",
    "build:wasm:debug": "./scripts/build_wasm.sh --debug",
    "dev": "tsc -p tsconfig.esm.json --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:wasm": "node tests/test_wasm.js",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist build/wasm",
    "prepublishOnly": "npm run clean && npm run build"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/madfam-io/geom-core.git"
  },
  "keywords": [
    "cad",
    "geometry",
    "brep",
    "occt",
    "opencascade",
    "webassembly",
    "wasm",
    "3d",
    "modeling",
    "boolean-operations",
    "tessellation",
    "mesh"
  ],
  "author": "MadFam <contact@madfam.io>",
  "license": "LGPL-2.1-only",
  "bugs": {
    "url": "https://github.com/madfam-io/geom-core/issues"
  },
  "homepage": "https://github.com/madfam-io/geom-core#readme",
  "peerDependencies": {
    "opencascade.js": ">=1.1.1 || ^2.0.0-beta"
  },
  "peerDependenciesMeta": {
    "opencascade.js": {
      "optional": true
    }
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "eslint": "^8.55.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "typescript": "^5.3.0",
    "vitest": "^1.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "packageManager": "pnpm@9.15.0"
}
